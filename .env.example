# AI Doctor - Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (ONLY OpenAI API Key needed)
OPENAI_API_KEY=your_openai_api_key_here
# Use GPT-4o mini - cheapest and latest model
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# OpenAI Voice Models (cheaper options)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_WHISPER_MODEL=whisper-1

# Django Configuration
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_doctor

# Medical AI Configuration
MEDICAL_AI_SYSTEM_PROMPT=You are Dr. AI, a professional virtual medical assistant. Provide helpful, accurate medical information while always recommending users consult with qualified healthcare professionals for medical advice.
MAX_CONVERSATION_HISTORY=10
ENABLE_VOICE_RESPONSES=True
ENABLE_GESTURE_RESPONSES=True

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging
LOG_LEVEL=INFO
OPENAI_API_LOG_LEVEL=WARNING

# Feature Flags
ENABLE_OPENAI_INTEGRATION=True
ENABLE_AVATAR_INTEGRATION=True
ENABLE_VOICE_CHAT=True
ENABLE_TEXT_TO_SPEECH=True
ENABLE_SPEECH_TO_TEXT=True

# Rate Limiting
OPENAI_RATE_LIMIT_RPM=60
OPENAI_RATE_LIMIT_TPM=10000

# Cache Settings
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300